<% layout('layouts/boilerplate') %>
    <h1>Farm Name: <%=farm.name%></h1>
    <h2>Add  A Product to: <%=farm.name%></h2>
    <form action="/farms/<%=farm._id%>/products" method="POST">
        <p>
            <label for="name">Name</label>
            <input type="text" name="name" id="name">
        </p>
        <p>
            <label for="price">Price</label>
            <input type="text" name="price" id="price">
        </p>
        <p>
            <label for="category">Category</label>
            <select name="category" id="category">
                <% wolfgang.categories.forEach(element => { %>
                     <option value="<%=element%>" <%=element === 'meat' && 'selected'  %>><%=element%></option>
                     <%  }); %>
 
        </p>
        <br>
        <input type="submit" value="Create">
    </form>


  
    <a href="/farms/<%=farm._id%>">back</a>
